<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Personal.activity.OtherPayActivity"
    android:orientation="vertical"
    android:background="@color/white_default">
    <include layout="@layout/item_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="19dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/datouxiang_" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="Kevin"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="17665003333"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <View
        style="@style/LineGray"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/iv_head"
        android:text="请求您代为支付"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_16"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@+id/iv_head"
        android:text="￥321"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_16"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="支付"
        android:textColor="@color/white_default"
        android:textSize="@dimen/sp_16"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_sure"
        android:gravity="center_horizontal"
        android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text=" "
            android:textColor="@color/black_333333"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="拒绝"
            android:textColor="@color/white_default"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_refece"
            android:gravity="center_horizontal"
            android:layout_marginRight="30dp"/>
    </LinearLayout>
</LinearLayout>