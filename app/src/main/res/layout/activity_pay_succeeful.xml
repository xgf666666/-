<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.activity.PaySucceefulActivity"
    android:orientation="vertical"
    android:background="@color/white_default">
    <include layout="@layout/item_title" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_win_n"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_title_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我们已收到您的支付"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/black_333333"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号：1223344"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/black_444444"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="由于我们的产品为多渠道销售，我们的工作人员将会尽快为您核查并确认订单，如果订单审核失败，我们将退还您所支付的所有款项，您可以在【个人中心-我的订单-待审核栏目】中查看订单审核状态，再次感谢您对翡翠原石的支付！
"
        android:textSize="@dimen/sp_15"
        android:textColor="#999999"
        android:layout_centerVertical="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回首页"
        android:textSize="@dimen/sp_15"
        android:textColor="#0006FF"
        android:layout_centerVertical="true"
        android:layout_marginTop="33dp"
        android:layout_gravity="center_horizontal"
        />




</LinearLayout>